import random

def print_dots(hint):
    for letter in hint[1]:
        print (".",end = " ")

def get_hints(file_name):
    with open (file_name,  "r", encoding = "utf-8") as f:
        text = f.read()
    lines = text.split("\n")
    hint = random.choice(lines)
    hint_split = hint.split(" ")
    return hint_split

